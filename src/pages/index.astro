---
import Layout from '../layouts/Layout.astro';
import Hero from '../ui/Home/Hero.astro';
import ProjectCardSection from '../ui/Home/ProjectCardSection.astro';
import SkillSection from '../ui/Home/SkillSection.astro';
import EducationSection from '../ui/Home/EducationSection.astro';
import Button from '../components/Button';
---

<!-- colors
#28808D
#2D5B63
#17A2B8
#233538
#283233 -->

<Layout title="Home title tag">
	<main>
		<Hero />
		<section class="bg-[#2D5B63] pt-5 pb-5 shadow-xl">
			<SkillSection />
		</section>
		<ProjectCardSection />
		<section class="w-full xl:w-10/12 mx-auto mb-20 md:flex">
			<div class="w-full md:w-8/12 lg:w-10/12"></div>
			<div class="w-full md:w-4/12 lg:w-2/12 p-6 md:p-0 md:pr-6">
				<Button link="http://localhost:4321/portfolio" name="See more projects" target="" bgColor="bg-[#17A2B8]" width="w-full text-center text-1xl text-white" />
				<!-- <p class="text-center lg:text-right lg:pr-10 text-1xl italic">
					See more <a href="" class="font-bold">projects</a>
				</p> -->
			</div>
		</section>
		<section class="pt-2 pb-20 bg-[#f4f4f4]">
			<div class="mt-10">
				<h2 class="text-center text-4xl font-bold uppercase">Education</h2>
			</div>
			<EducationSection />
			<div class="mt-10">
				<p class="text-center text-1xl italic">For more information on my education, click <a class="font-bold" href="http://localhost:4321/education">here</a></p>
			</div>
		</section>
	</main>
</Layout>


    document.getElementById("year").innerHTML = new Date().getFullYear();

    // Issue: Gets all links of navigation but mobile nav is not included. Styles do not apply to mobile.
    // Moving JS scripting to footer as Astro has issues with Document & Window attributes. Needs to be in a script tag (island methods for client components)
    const navigation = document.querySelector(".navigation");
    // console.log(navigation);

    // navigation null check -- SOLVED
    if(navigation !== null){
        const navLink = navigation.querySelectorAll("a");
        const currentURL = window.location.href;
        navLink.forEach((link) => {
            if(link.href === currentURL){
            link.classList.add("active");
            }
        });
    } else {
        // No need for console message

---

interface Props {
    image: string,
    imgAlt: string,
    tags: string,
    title: string,
    url: string,
    codeURL: string,
}


const { image, imgAlt, tags, title, url, codeURL } = Astro.props;

---

<section>
    <img src={image} class="w-full" alt={imgAlt} />
    <p>{tags}</p>
    <h4 class="text-xl p-1">{title}</h4>
    <div class="flex justify-between">
        <p class="bg-gray-200 w-full p-1"><a href={url}>Live Website</a></p>
        <p class="bg-gray-400 w-full p-1"><a href={codeURL}>GitHub</a></p>
    </div>
</section>